{% extends "layout.jinja2" %}

{% block body %}
<!-- ... WRAP THE EDIT LINK -->
<p>
  <a href="{{ request.route_url('home') }}">Go Back</a>
  {% if logged_in %}
  ::
  <a href="{{ request.route_url('action', action='edit', _query=(('id',entry.id),)) }}">
    Edit Entry</a>
  {% endif %}
</p>

<article>
  <h1>{{ entry.title }}</h1>
  <hr/>
  <p>{{ entry.body }}</p>
  <hr/>
  <p>Created <strong title="{{ entry.created }}">{{entry.created}}</strong></p>
  <p>Updated <strong title="{{ entry.edited }}">{{entry.edited}}</strong></p>
</article>

<p>
  <a href="{{ request.route_url('home') }}">Go Back</a> ::
  <a href="{{ request.route_url('action', action='edit', _query=(('id',entry.id),)) }}">
    Edit Entry</a>
</p>

{% endblock %}
